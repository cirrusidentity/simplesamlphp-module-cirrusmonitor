{
    "name": "cirrusidentity/simplesamlphp-module-cirrusmonitor",
    "description": "SSP Module for monitoring",
    "type": "simplesamlphp-module",
    "require": {
        "php" : ">= 8.1",
        "simplesamlphp/composer-module-installer": "^1.1",
	"simplesamlphp/simplesamlphp": "^v2.0.0-rc2",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "simplesamlphp/simplesamlphp-test-framework": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "simplesamlphp/composer-module-installer": true
        }
    },
  "scripts": {
    "quality": [
      "vendor/bin/phpunit --no-coverage",
      "vendor/bin/phpcs -p",
      "vendor/bin/psalm --clear-cache",
      "vendor/bin/psalm --use-baseline=psalm-baseline.xml"
    ],
    "tests": [
      "vendor/bin/phpunit --no-coverage"
    ]
  }
    
}
